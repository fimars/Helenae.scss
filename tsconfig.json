{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,

    /* Additional Checks */
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
  },
  "exclude": ["**/__tests__/**/*", "**/build/**/*"]
}
